<%= render "shared/header"%>

<div class = "home-content">
  <div class = "center">
   <h2>Anipho</h2>
   <p>Aniphoはあなたの可愛いペットを動物好きな人達に自慢できるwebアプリケーションです</p>
  </div>
</div>

<%= render "shared/search_form" %>

<% if @posts == [] %>
  <h2 class = "empty">投稿はまだありません</h2>
<% else %>
  <% if user_signed_in? %>
  <div class = "post-contents">
    <ul class = "post-list" >
    <% @posts.each do |post| %>
      <li class = "list">
      <% post.images.each do |image| %>
        <%= image_tag image, class: "post-img" %>
      <% end %>
        <h3 class='post-title'>
        <span class = "like-box" id="like_<%= post.id %>">
        <%= render "shared/show_like", post: post %>
        </span>
        <%= post.title %>
        </h3>
        <%= link_to post_path(post.id) do %>
        <p class = "root-show">--クリックして詳細を見る--</p>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <% else %>
  <div class = "post-contents">
    <ul class = "post-list" >
    <% @posts.each do |post| %>
      <li class = "list">
      <% post.images.each do |image| %>
        <%= image_tag image, class: "post-img" %>
      <% end %>
        <h3 class='post-title'>
        <div class = "like-box" >
        <i class="fa fa-heart like-btn"></i>
        <%= post.likes.count %>
        </div>
        <%= post.title %>
        </h3>
        <p class = "like-info">＊いいねするにはログインが必要です</p>
        <%= link_to post_path(post.id) do %>
        <p class = "root-show">--クリックして詳細を見る--</p>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <% end %>
<% end %>

<%= paginate(@posts) %>

<%= link_to new_post_path, class: 'post-btn' do %>
  <span class='post-btn-text'>投稿する</span>
<% end %>

<%= render  "shared/footer" %>